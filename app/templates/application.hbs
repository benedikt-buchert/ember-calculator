<div class="container-fluid">
	<div class="row-fluid result">
		{{#if currentValue}}
    		{{frmtCurrentValue}}
  			{{else}}
    			{{frmtTotal}}
  		{{/if}}
	</div>
	<div class="row">
		{{calc-button value="C" action="clear"}}
		{{calc-button value="+/-" action="setOperator"}}
		{{calc-button value="%" action="setOperator"}}
		{{calc-button isOrange=true value="/" action="setOperator"}} 
	</div>
	<div class="row">
		{{calc-button value="7"}}
		{{calc-button value="8"}}
		{{calc-button value="9"}}
		{{calc-button isOrange=true value="*" action="setOperator"}}
	</div>
	<div class="row">
		{{calc-button value="4"}}
		{{calc-button value="5"}}
		{{calc-button value="6"}}
		{{calc-button isOrange=true value="-" action="setOperator"}}
	</div>
	<div class="row">
		{{calc-button value="1"}}
		{{calc-button value="2"}}
		{{calc-button value="3"}}
		{{calc-button isOrange=true value="+" action="setOperator"}}
	</div>
	<div class="row">
		{{calc-button isZero=true value="0"}}
		{{calc-button value="."}}
		{{calc-button isOrange=true value="=" action="setOperator"}}
	</div>
</div>